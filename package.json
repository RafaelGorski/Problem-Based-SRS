{
  "name": "problem-based-srs",
  "version": "1.2.0",
  "description": "Problem-Based Software Requirements Specification methodology",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration"
  },
  "keywords": [
    "requirements",
    "srs",
    "agentskills",
    "copilot",
    "claude"
  ],
  "author": "rafael-gorski",
  "license": "MIT",
  "devDependencies": {
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "glob": "^10.3.10"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "skills/**/*.md",
      ".github/prompts/**/*.md"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
